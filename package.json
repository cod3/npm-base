{
  "name": "@cod3/npm-base",
  "description": "A base package for creating NPM packages with typescript+eslint+prettier+jest.",
  "version": "0.0.2",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cod3/npm-base.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "prebuild": "npm run clean && npm run lint && npm run test",
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint --ext .js,.ts --ignore-path ./.gitignore --fix",
    "test": "jest",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@types/node": "^14.14.16",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4"
  },
  "keywords": [
    "typescript",
    "lint",
    "prettier",
    "jest"
  ],
  "author": "cod3",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cod3/npm-base/issues"
  },
  "homepage": "https://github.com/cod3/npm-base#readme"
}
